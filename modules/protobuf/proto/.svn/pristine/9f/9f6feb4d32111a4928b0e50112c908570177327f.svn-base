// 累计抽卡列表数据 755 ========> 服务端推送
message KeepLotteryListMsg {
	repeated KeepLotteryMsg keepLotteryList = 1; // 累计抽卡数据
}

// 累计抽卡数据
message KeepLotteryMsg {
	required int32 activityId = 1;       // 活动id
	required int32 lotteryNum = 2;       // 累计抽卡次数
	repeated int32 recievedList = 3;     // 已领取的列表
}

